  clearInterval(window.timer);
  addClass(document.getElementById('game'), 'over');
  var calificacion=(buenas/(malas+buenas)*100).toFixed(2)+'%';
  var datos = {
        usuario: usuario,
        buenas: buenas,
        malas: malas,
        calificacion: calificacion
    };
